<%- include("../layout") %>

<h2 class="text-danger">Delete Workout</h2>

<p>Are you sure you want to delete this workout?</p>

<ul>
    <li><strong>Name:</strong> <%= workout.name %></li>
    <li><strong>Duration:</strong> <%= workout.duration %> minutes</li>
    <li><strong>Difficulty:</strong> <%= workout.difficulty %></li>
</ul>

<form action="/workouts/delete/<%= workout._id %>" method="POST">
    <button class="btn btn-danger">Yes, Delete</button>
    <a href="/workouts" class="btn btn-secondary">Cancel</a>
</form>

</div>
</body>
</html>
